<div class="container-fluid bg-muted">
  <div class="row">
    <div class="col-12">
      <h1 class="text-bold text-center justify-content-center">Laptops for sale!</h1>
    </div>
    <div class="col-12">
      {{#if laptops.length}}
        <div class="card-box m-3">
          {{#each laptops}}
            <div class="card" style="width: 18rem;">
              <img src="{{img}}" class="card-img-top" alt="{{title}}" />
              <hr />
              <div class="card-body m-0">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text"><h4><b>Laptop price ${{price}}</b></h4></p>
                <p class="card-text" id="description">{{description}}</p>
              </div>
                <a
                  id="details"
                  href="/products/{{id}}"
                  target="_blank"
                  class="btn"
                >Details</a>

                <a
                  id="details"
                  href="/products/{{id}}/edit?allow=true"
                  target="_blank"
                  class="btn"
                >Edit</a>
                <form
                  action="/card/add"
                  method="post"
                >
                  <input type="hidden" name="id" value="{{id}}" />
                  <button type="submit" class="btn btn-primary">Buy</button>
                </form>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="container-fluid mt-100">
          <div class="row">
            <div class="col-md-12">
              <div class="card" style="height: 350px;">
                <div class="card-body cart">
                  <div class="col-sm-12 empty-cart-cls text-center">
                    <img
                      src="https://i.imgur.com/dCdflKN.png"
                      width="130"
                      height="130"
                      class="img-fluid mb-4 mr3"
                      alt=""
                    />
                    <h3><strong>Laptops not found!!!</strong></h3>
                    <h4>Create laptop to make me happy :)</h4>
                    <a
                      href="/products/create/add"
                      class="btn btn-primary cart-btn-transform m-3"
                    >CONTINUE SHOPPING</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
      <br />
    </div>
  </div>
</div>